{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitHelpers": true,
		"noEmitOnError": true,
    "lib": [
      "es2017",
      "dom",
      "es6"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "app/*"
      ]
    }
	},
  "includes": [
    "references.d.ts"
  ],
  "files": [
    "./src/main.ts"
  ],
	"exclude": [
		"node_modules",
		"platforms",
		"../src/node_modules",
    "**/*.aot",
    "e2e"
	]
}
