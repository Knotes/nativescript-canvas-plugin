{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2015",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitHelpers": true,
		"noEmitOnError": false,
		"lib": [
			"es6",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"app/*"
			],
			"*": [
				"./node_modules/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"platforms"
	],
	"include": [
		"../src",
		"**/*"
	]
}
