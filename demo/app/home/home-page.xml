<Page class="page" loaded="loaded"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:canvas="nativescript-canvas-plugin">

    <ActionBar>
        <Label text="Home"/>
    </ActionBar>

    <GridLayout iosOverflowSafeArea="false" rows="auto,auto,auto,auto">
        <canvas:TNSCanvas iosOverflowSafeArea="true" rowSpan="4" id="canvas" width="100%" height="100%"
                          ready="canvasLoaded"/>
        <ScrollView rowSpan="4" visibility="{{ show ? 'visible': 'collapse' }}" orientation="vertical">
            <Repeater items="{{ items }}">
                <Repeater.itemsLayout>
                    <StackLayout orientation="vertical"/>
                </Repeater.itemsLayout>
                <Repeater.itemTemplate>
                    <Label color="{{ $parents['Repeater'].textColor }}" tap="tap" text="{{ name }}" margin="10"/>
                </Repeater.itemTemplate>
            </Repeater>
        </ScrollView>

        <Button row="0" verticalAlignment="top" horizontalAlignment="right" width="100" height="100"
                text="{{ show ? 'Show Examples': 'Hide Examples' }}" tap="toggle"/>

    </GridLayout>
</Page>
